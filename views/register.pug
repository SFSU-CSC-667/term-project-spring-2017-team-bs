extends layout

block content

  h1 Sign Up

  if (message != '')
    .alert.alert-danger #{message}

  form(method='POST' action='/register' onSubmit='return checkCredentials()')
      div.form-group
        label(for='username') Username:
        input.form-control#username(type='text' name='username')
      div.form-group
        label(for='password') Password (at least 6 characters):
        input.form-control#password(type='password' name='password')
      div.form-group
        label(for='confirmPassword') Confirm Password:
        input.form-control#confirmPassword(type='password' name='confirmPassword')
      input.btn.btn-default(type='submit' value='Register')

  a(href='/login') Already have an account? Login here

  script(src='/javascripts/register.js')