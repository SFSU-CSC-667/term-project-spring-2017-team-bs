extends layout

block content
  h1= title
  - var players = 4
  p 'Game number: ' #{id}

  body
    .container
      .row
        div.col-md-1.col-lg-1
          button(id='leave') Leave
        div.col-md-6.col-lg-6
          p.gameroomname Game room name here
      .row      
        div.col-md-9.col-lg-9
          .row
            div.playerarea.col-md-4.col-lg-4.col-md-offset-4.col-lg-offset-4
              .row
                img(src='...' class='card img-rounded')
              .row
                p username here
          .row
            div.playerarea.col-md-4.col-lg-4
              .row
                img(src='...' class='card img-rounded')
              .row
                p username here
            div.deck.col-md-4.col-lg-4
              .row
                img(src='...' class='card img-rounded')
              .row
                p # cards in deck
            div.playerarea.col-md-4.col-lg-4
              .row
                img(src='...' class='card img-rounded')
              .row
                p username here
          .row
            div.bsbutton.col-md-4.col-lg-4.col-md-offset-4.col-lg-offset-4
              button.btn.btn-danger BS
          .row
            div.timer.col-md-4.col-lg-4.col-md-offset-4.col-lg-offset-4
              p timer
          .row
            div.playerarea.col-md-4.col-lg-4.col-md-offset-4.col-lg-offset-4
              .row
                img(src='...' class='card img-rounded')
              .row
                p username here
          .row
            div.calls
              p calls here

        div.col-md-3.col-lg-3
          .row
            div.settings
            p current settings here
              p room name:
              p number of players:
              p starting cards:
          .row
            div.lasthandcalled
              p last hand called here   
          .row
            div.chatbox
              .row
                ul#messages
              .row
                form(class='chatform form-inline', action='')
                  div.form-group
                    .col-md-9.col-lg-9
                      input(class='chatinput form-control', type='text', placeholder='Chat')
                    .col.md-3.col-lg-3
                      button.chatsend.btn.btn-default Send